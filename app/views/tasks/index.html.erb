<h2><%= t :tasks_list %></h2>
<h5><%= notice %></h5>
<%= link_to "#{t :new_task}", new_task_path, class: 'btn btn-outline-primary' %>
<% @tasks.each do |task| %>
  <div class="card">
    <div class="card-header">
      <%= task.title %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= task.content %>
      </p>
      <%= link_to "#{t :edit_task}", edit_task_path(task), class: 'btn btn-outline-primary' %>
      <%= link_to "#{t :delete_task}", task_path(task), method: 'delete', data: { confirm: '確認刪除？'}, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
