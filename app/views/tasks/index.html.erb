<% if true %>
<div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
    aria-haspopup="true" aria-expanded="false">
    <%= t :sort_by %>
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="<%= tasks_path( params: { order: :created_at }) %>"><%= t :create_time %></a>
    <a class="dropdown-item" href="<%= tasks_path( params: { order: :end_time }) %>"><%= t :end_time %></a>
  </div>
</div>
<% end %>

<% if true %>
<div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
    aria-haspopup="true" aria-expanded="false">
    <%= t :state_search %>
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="<%= tasks_path( params: { state: :pending }) %>"><%= t :pending %></a>
    <a class="dropdown-item" href="<%= tasks_path( params: { state: :processing }) %>"><%= t :processing %></a>
    <a class="dropdown-item" href="<%= tasks_path( params: { state: :finishing }) %>"><%= t :finishing %></a>
  </div>
</div>
<% end %>

<% if true %>
  <%= form_tag tasks_path, method: :get, class: 'questions-search-form' do %>
    <div class="input-group">
      <input type="text" class="form-control" name="query_string" placeholder="Search...">
      <div class="input-group-append">
        <button class="btn btn-primary" type="submit">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </div>
  <% end %>
<% end %>

<%= render 'search_form_for', q: @q %>

<%= render 'tasks', tasks: @tasks %>

<%= paginate @tasks %>